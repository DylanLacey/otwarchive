<div id="work-form" class="post create faq">
  <%= form_for(@archive_faq) do |f| %>
    <%= error_messages_for @archive_faq %>

<dl class="text">
<dt><%= f.label :title, ts("Category Name") %></dt>
<dd><%= f.text_field :title, :id => "title" %>
        <%= live_validation_for_field('title', :failureMessage => ts("Please enter a Category Name.")) %>
      </dd>
<%= f.fields_for :questions do |builder| %>
<%= render 'question_answer_fields', :f => builder %>
<% end %>
<p class="actions" role="button">
  <% linktext = ts("Add another Question?") %>
  <%= link_to_add_fields(linktext, f, :questions) %>
</p>
<dt class="landmark heading">("Post") %></dt>
<dd class="submit actions">
        <%= submit_tag ts('Post'), :name => 'post_button' %>
      </dd>
    </dl>
  <% end %>
</div>
